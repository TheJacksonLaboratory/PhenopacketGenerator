<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jax.phenopacketgenerator.gui.MainController">
   <center>
      <AnchorPane prefHeight="250.0" prefWidth="400.0">
         <children>
            <VBox prefHeight="201.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label prefWidth="100.0" text="Sex">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                        <ComboBox fx:id="sexComboBox" prefWidth="150.0">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </ComboBox>
                        <Label text="Age">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="ageTextfield">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Phenopacket ID">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="phenopacketIdTextfield">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                        <Label text="Proband ID">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="probandIdTextfield">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="hpoTextMiningButton" minWidth="200.0" mnemonicParsing="false" onAction="#hpoTextMiningButtonAction" text="Enter HPO terms">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="phenotypeSummaryLabel" minWidth="175.0" text="0 HPO terms entered">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button alignment="CENTER" minWidth="200.0" mnemonicParsing="false" onAction="#setPathToVcfFile" text="Set path to VCF file">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="vcfFileLabel" minWidth="150.0" text="No VCF file">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <ComboBox fx:id="genomeBuildComboBox" prefWidth="200.0" promptText="Genome assembly">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </ComboBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button minWidth="200.0" mnemonicParsing="false" onAction="#exportPhenopacket" text="Export Phenopacket">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="exportPhenopacketLabel">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exitMenuItemAction" text="Close">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
              </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#setBiocuratorMenuItemClicked" text="Set biocurator ID" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
