<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jax.phenopacketgenerator.gui.MainController">
   <center>
       <AnchorPane prefHeight="350.0" prefWidth="800.0">
           <VBox prefHeight="300.0" prefWidth="800.0">
               <GridPane vgap="20.0">
                   <padding>
                       <Insets bottom="25" left="25" right="25" top="25" />
                   </padding>
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="40.0" prefWidth="60.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="40.0" prefWidth="60.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints maxHeight="20.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                       <RowConstraints maxHeight="20.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <Label prefWidth="100.0" text="Sex" GridPane.columnIndex="0" GridPane.rowIndex="0">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </Label>
                   <ComboBox fx:id="sexComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </ComboBox>
                   <Label prefWidth="100.0" text="Age" GridPane.columnIndex="2" GridPane.rowIndex="0">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </Label>
                   <TextField fx:id="ageTextfield" GridPane.columnIndex="3" GridPane.rowIndex="0">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </TextField>
                   <Label text="Phenopacket ID" GridPane.columnIndex="0" GridPane.rowIndex="1">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </Label>
                   <TextField fx:id="phenopacketIdTextfield" GridPane.columnIndex="1" GridPane.rowIndex="1">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </TextField>
                   <Label text="Proband ID" GridPane.columnIndex="2" GridPane.rowIndex="1">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </Label>
                   <TextField fx:id="probandIdTextfield" GridPane.columnIndex="3" GridPane.rowIndex="1">
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                       <GridPane.margin>
                           <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                       </GridPane.margin>
                   </TextField>
               </GridPane>
               <HBox prefHeight="100.0" prefWidth="200.0">
                   <Button fx:id="hpoTextMiningButton" minWidth="200.0" mnemonicParsing="false" onAction="#hpoTextMiningButtonAction" text="Enter HPO terms">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Button>
                   <Label fx:id="phenotypeSummaryLabel" minWidth="175.0" text="0 HPO terms entered">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Label>
               </HBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                   <Button alignment="CENTER" minWidth="200.0" mnemonicParsing="false" onAction="#setPathToVcfFile" text="Set path to VCF file">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Button>
                   <Label fx:id="vcfFileLabel" minWidth="150.0" text="No VCF file">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Label>
               </HBox>
               <ComboBox fx:id="genomeBuildComboBox" prefWidth="200.0" promptText="Genome assembly">
                   <VBox.margin>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                   </VBox.margin>
               </ComboBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                   <Button fx:id="exportPhenopacketButton" minWidth="200.0" mnemonicParsing="false" onAction="#exportPhenopacket" text="Export Phenopacket">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Button>
                   <Label fx:id="exportPhenopacketLabel">
                       <HBox.margin>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </HBox.margin>
                   </Label>
               </HBox>
           </VBox>
       </AnchorPane>
   </center>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" onAction="#exitMenuItemAction" text="Close">
                   <accelerator>
                       <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                   </accelerator>
               </MenuItem>
           </Menu>
           <Menu mnemonicParsing="false" text="Edit">
               <MenuItem mnemonicParsing="false" onAction="#setPathToHpoObo" text="Set path to hp.obo file" />
               <MenuItem mnemonicParsing="false" onAction="#setBiocuratorMenuItemClicked" text="Set biocurator ID" />
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" onAction="#aboutWindow" text="About" />
           </Menu>
       </MenuBar>
   </top>
   <bottom>
       <HBox prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER">
           <Label fx:id="statusLabel" />
       </HBox>
   </bottom>
</BorderPane>
